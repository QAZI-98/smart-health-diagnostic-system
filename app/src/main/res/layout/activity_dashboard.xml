<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adminapp.dashboard"
    android:orientation="vertical"
    >

    <ImageView

        android:id="@+id/home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_home_24"
        app:tint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/signout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_vpn_key_24"
        app:tint="@color/design_default_color_error" />


    <TextView
        android:id="@+id/welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home"
        android:layout_centerHorizontal="true"
        android:text="Welcome to smart health diagnostic"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/welco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcom"
        android:layout_centerHorizontal="true"
        android:text="Admin Panel"
        android:textColor="@color/black"
        android:textSize="20sp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/add_doc"
        android:layout_below="@id/welco2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimary"
        android:text="Add doctor"
        android:textSize="20sp"
        android:textColor="@color/white"

        />


    <Button
        android:id="@+id/view_doc"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/add_doc"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="View doctors"
        android:textSize="20sp"
        android:textColor="@color/white"

        />

    <Button
        android:id="@+id/feedback"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/view_doc"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="View Feedback"
        android:textSize="20sp"
        android:textColor="@color/white"
       />

    <Button
        android:id="@+id/userv"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/feedback"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="View User"
        android:textSize="20sp"
        android:textColor="@color/white"
        />


</RelativeLayout>
